        </dependency>

        <!-- Micrometer Tracing (Highly Recommended for correlating logs) -->
        <dependency>
            <groupId>io.micrometer</groupId>
            <artifactId>micrometer-tracing-bridge-brave</artifactId> <!-- Or zipkin -->
        </dependency>
